//Josh Shull 47300062 Lab 3-Spring 2021
import java.util.Scanner;
//create main method
public class Storell {
//Create Static Variables
	static int priceDVD = 9;
	static double cashOnHand = 100;
	static Scanner input = new Scanner(System.in);
	static int userMenuValue;
	static int userDVDValue;
	static int totalDVDValue = 10;
	static Scanner scan = new Scanner(System.in);
	static int initiatorVariable = 5;

//Create Main method by using a while loop
//and grabbing other methods
	public static void main(String[] args) {
		while (initiatorVariable == 5){
		displayMenu();
		if (userMenuValue == 1){
			buyDVD();
		}
		else if (userMenuValue == 2){
			sellDVD();
		}
		else if (userMenuValue == 3){
			getNumberOfDVDs();
		}
		else if (userMenuValue == 4){
			getCashOnHand();
		}
		else if (userMenuValue == 9){
			exitMenu();
		} 
		else{
			System.out.println("This option is not acceptable");
		}
	}
	}
	//Display method
	public static int displayMenu(){

		System.out.println("");
		System.out.println("Welcome to DVDs R Us. Please choose from the options below");
		System.out.println("1 - Buy DVDs");
		System.out.println("2 - Sell DVDs");
		System.out.println("3 - Check how many DVDs we have in stock");
		System.out.println("4 - Check how much cash we have");
		System.out.println("9 - Exit the program");
		System.out.print("Enter Option: ");
		userMenuValue = scan.nextInt();
		return userMenuValue;
}
	//buy DVD method
	public static void buyDVD() {

		if (userMenuValue == 1){
				System.out.print("Enter the number of DVDs to buy: ");
				userDVDValue = scan.nextInt();
				if (cashOnHand - priceDVD * userDVDValue > 0){
				totalDVDValue = totalDVDValue + userDVDValue;
				cashOnHand = cashOnHand - (userDVDValue * priceDVD);
				getInventory();
			}
				else {
					System.out.println("You do not have enough money for this transaction");
					}
	}
	}
	//Sell DVD method
	public static void sellDVD() {

			if (userMenuValue == 2) {
				System.out.println("How many DVDs would you like to Sell?");
				userDVDValue = scan.nextInt();
				if (totalDVDValue - userDVDValue >= 0){
				totalDVDValue = totalDVDValue - userDVDValue;
				cashOnHand = cashOnHand + (userDVDValue * priceDVD);
				getInventory();
			}
				else {
					System.out.println("You do not have enough DVDs for this transaction");
					}
			}
	}
	//getInventory method
	public static void getInventory(){
				System.out.println("Number of DVDs: " + totalDVDValue);
				System.out.println("Cash available: " + cashOnHand);
	}
	//get numberOfDVDs method
	public static void getNumberOfDVDs(){
		if (userMenuValue == 3) {
				System.out.println("Number of DVDs: " + totalDVDValue);
			}
	}
	//getCashOnHand method
	public static void getCashOnHand(){	
		if (userMenuValue == 4) {
				System.out.println("Cash available: " + totalDVDValue);
			}
	}
	//exitMenu method
	public static void exitMenu(){
		if (userMenuValue == 9){
				initiatorVariable = 4;
				System.out.println("Thank you for shopping with us Please return soon");
			}
	}


}
